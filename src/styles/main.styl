@import 'https://fonts.googleapis.com/css?family=Alegreya+Sans:400,400italic|Alegreya:400,400italic|Alegreya+SC'
@import 'https://maxcdn.bootstrapcdn.com/font-awesome/4.6.1/css/font-awesome.min.css'
@import 'prism/themes/prism-okaidia.css'

$background = #fafafa
$orange     = #F30
$black      = #111
$gold       = #be9d31
$white      = #ddd
$serif      = Alegreya, didot, times new roman, serif
$sans-serif = Alegreya Sans, futura, helvetica, arial, arial, sans-serif
$serif-caps = Alegreya SC, serif
$monospace  = prestige elite std, consolas, courier new, monospace
$emdash     = '\2014'

*
  margin: 0
  padding: 0

html
  text-size-adjust: auto

body
  background-color: white

.bespoke-parent
  font-size: 1.5em
  background: $background
  color: $black
  font-family: $sans-serif
  position: absolute
  top: 0
  left: 0
  right: 0
  bottom: 0
  overflow: hidden
  text-align: center
  transition: background 1s ease
  background-position: 50% 50%

.bespoke-scale-parent
  position: absolute
  top: 0
  left: 0
  right: 0
  bottom: 0
  pointer-events: none
  z-index: 1
  .bespoke-active
    pointer-events: auto

.bespoke-slide
  transition: opacity .5s ease
  width: 940px
  height: 480px
  position: absolute
  top: 50%
  left: 50%
  margin-left: -(@width / 2)
  margin-top: -(@height / 2)
  display: flex
  flex-direction: column
  justify-content: center
  align-items: center
  z-index: 1

.bespoke-active
  transition-delay: .5s
  &[data-bespoke-backdrop]
    transition-delay: .75s

.bespoke-inactive
  opacity: 0
  pointer-events: none

.bespoke-backdrop
  transition: opacity 1s ease
  position: absolute
  top: 0
  left: 0
  right: 0
  bottom: 0
  opacity: 0
  &-active
    opacity: 1

.bespoke-progress-parent
  position: absolute
  top: 0
  left: 0
  right: 0
  height: .3vw
  z-index: 1

.bespoke-progress-bar
  background: $gold
  position: absolute
  top: 0
  left: 0
  height: 100%
  transition: width 1s ease

.bespoke-bullet
  transition: opacity .3s ease

.bespoke-bullet-inactive
  opacity: 0

strong
  font-weight: 400

img
  max-width: 90%
  max-height: 90%

hr
  width: 50%
  margin: 1rem auto
  height: 1px
  border: 0
  background: $black

h1, h2, h3, p, li
  padding-left: 20px
  padding-right: 20px

h1, h2, h3, h4, p, li, pre
  font-weight: 300

h1
  border: 1px solid $black
  border-left-width: 0
  border-right-width: 0
  font-family: $serif-caps
  font-weight: 400
  letter-spacing: .3em
  line-height: 1.4em
  margin: 0.17em 0
  min-width: 8em
  padding: 1em
  position: relative
  text-transform: lowercase

h2
  font-weight: 400
  letter-spacing: .3em
  line-height: 1.1em
  margin: 0.17em 0
  padding-left: @letter-spacing
  padding: 0
  position: relative
  text-transform: uppercase

h3
  font-family: $sans-serif
  font-size: 1.2em
  font-style: normal
  letter-spacing: .3em
  line-height: 1.6em
  margin: .5em 0
  text-transform: uppercase

h4
  font-family: $sans-serif
  font-size: .8em
  letter-spacing: .3em
  line-height: 1.8em
  margin: 1em 0
  text-transform: uppercase

ul, ol
  padding: 0
  margin: 0
  text-align: left

dl
  text-align: left

dt
  font-weight: bold
  margin-top: .5em

dd
  margin-left: 1em

li
  list-style: none
  margin: .2em
  font-style: normal
  transform: translateX(-6px)
  &:before
    content: $emdash
    margin-right: 4px

blockquote
  font-family: $serif
  width: 65%
  margin: 2em auto
  text-align: left

  cite::before
    content: 'â€” '

  cite
    display: block
    margin-top: 1em
    text-align: right

table
  margin: 1em auto
  text-align: left

th
  border-bottom: 1px solid $black
  vertical-align: bottom

th, td
  padding: .3em

  &.guess
    text-align: center

pre
  background: none !important

code
  font-family: $monospace !important
  font-style: normal
  font-weight: 200 !important
  text-align: left

a
  padding: 0
  color: currentColor
  text-decoration: none
  border-bottom: 1px solid currentColor

s
  text-decoration: none
  display: inline-block
  position: relative

s::after
  content: ''
  border-top: .075em solid red
  position: absolute
  top: 50%
  left: -.1em
  width: 100%
  transform: rotateZ(-1deg)

.single-words
  word-spacing: 9999px
  line-height: 2.9em
  overflow: hidden

.center
  text-align: center

.sarcasm
  font-family: $serif
  font-style: italic
  letter-spacing: .05em
  text-transform: none

.note
  margin-top: 1em
  font-size: .75em

.compare
  display: flex
  align-items: center
  justify-content: space-around
  width: 100%

.framed
  border: 2px solid $gold
  &.correct
    border-color: red

.bespoke-backdrop
  opacity: 0
  transition: opacity 1s ease, transform 6s ease
  background-size: cover
  background-position: 50% 50%
  transform: translateZ(0) scale(1.3)
  &-active,
  &-before
    transform: translateZ(0)
  &-before
    transition-delay: .2s
  &-active
    opacity: 0.5

.fa-compass
  color: #ccc

.fa-twitter
  color: #4099ff

.social
  font-size: .8em
  line-height: 1.8em
  letter-spacing: .2em
  margin: 1em 0

.red
  color: red

// Hide Bespoke.app slide notes
.notes
  display: none
